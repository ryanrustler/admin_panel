<h1> Edit Cohorts </h1>

<%= form_with model: @cohort, url: cohort_path, method: :patch do |f| %>
<h2><%= f.label :name %>:    <%= f.text_field :name %><br></h2>

<h2><%= f.label :start_date %>: <%= f.date_field :start_date %><br></h2>
 
<h2><%= f.label :end_date %>: <%= f.date_field :end_date %><br></h2>

<h2> Students: <%= f.hidden_field :student_id, value: @student_id%>
<%= f.select :student_id, @students.map {|student| [student.first_name,student.id]} %><br></h2>

<h2> Instructor: <%= f.hidden_field :instructor_id, value: @instructor_id%>
<%=f.select :instructor_id, @instructors.map {|instructor| [instructor.first_name,instructor.id]} %><br>

<%= f.hidden_field :course_id, value: @course_id%> Course: 
<%=f.select :course_id, @courses.map {|course| [course.name,course.id]} %><br>


<h2><%= f.label :Update_cohort%>: <%= f.submit %></h2>


<%= link_to 'Remove cohort', delete_cohort_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>