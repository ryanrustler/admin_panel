<h1> Courses </h1>
<h3 class = "right">
<button class = "button">
  <%= link_to "New Courses", new_course_path %>
</button>
  </h3>
<% @courses.each do |course| %>

<h2>Course Name: <%= course.name %></h2>
<h3>Hours: <%= course.hours %><br></h3>
<button class = "button2">
<%= link_to "Edit Course", edit_course_path(course) %><br>
</button>
<button class = "button2">
<%= link_to 'Remove course', delete_course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %><br> 
</button>                    
<% end %>

  <%= link_to "New Courses", new_course_path %>