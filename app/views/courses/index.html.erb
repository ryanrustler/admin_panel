<h1> Courses </h1>

<% @courses.each do |course| %>

<h2>Course Name: <%= course.name %></h2>
<h3>Hours: <%= course.hours %><br></h3>

<%= link_to "Edit Course", edit_course_path(course) %><br>
<%= link_to 'Remove course', delete_course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

